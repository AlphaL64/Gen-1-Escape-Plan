<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <Configurations>Debug;Release</Configurations>
    <Platforms>AnyCPU</Platforms>
    <ApplicationIcon />
    <StartupObject>byteToPk1.Program</StartupObject>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Buildo|AnyCPU'">
    <PlatformTarget>x86</PlatformTarget>
    <OutputPath>buildo\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ilmerge" Version="3.0.41" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="PKHeX.Core">
      <HintPath>..\..\autoPKHeX\autoPKHeX\PKHeX.Core.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="ILMerge">
    <!-- the ILMergePath property points to the location of ILMerge.exe console application -->
    <Exec Command="$(ILMergeConsolePath) Bin\Release\net5.0\byteToPk1.exe /out:app.exe Bin\Release\net5.0\byteToPk1.dll Bin\Release\net5.0\PKHeX.Core.dll" />
    <!--Bin\Release\net5.0\File2.dll ^ -->
  </Target>

</Project>
